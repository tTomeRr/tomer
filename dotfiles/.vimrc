set tabstop=2
set shiftwidth=2
set shiftround
set expandtab
set encoding=utf-8

" Added settings
set number                    " Show line numbers
set relativenumber           " Show relative line numbers  
set ruler                    " Show cursor position in status line

" jj to exit insert mode
inoremap jj <Esc>

" Disable arrow keys
map <Up> <Nop>
map <Left> <Nop>
map <Right> <Nop>
map <Down> <Nop>
